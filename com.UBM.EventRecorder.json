{
    "app-id": "com.UBM.EventRecorder",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.7",
    "sdk": "org.kde.Sdk",
    "command": "EventRecorder.py",
    "modules": [
        {
            "name": "python3-pyqt6",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "dir",
                    "path": "pyqt6"
                }
            ],
            "build-commands": [
                "pip3 install --prefix=/app PyQt6"
            ],
            "build-options" : {
                "build-args" : ["--share=network"]
            }
        },
        {
            "name": "EventRecorder",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/FedericoCalzoni/EventRecorder.git",
                    "branch": "main"
                },
                {
                    "type": "dir",
                    "path": "EventRecorder"
                },
                {
                    "type": "file",
                    "path": "com.UBM.EventRecorder.desktop"
                }
            ],
            "build-commands": [
                "install -D EventRecorder.py /app/bin/EventRecorder.py",
                "chmod +x /app/bin/EventRecorder.py",
                "install -D logo.png /app/share/icons/hicolor/128x128/apps/com.UBM.EventRecorder.png",
                "install -D com.UBM.EventRecorder.desktop /app/share/applications/com.UBM.EventRecorder.desktop"
            ]
        }
    ],
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home"
    ]
}